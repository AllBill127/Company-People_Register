<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
    <typeAliases>
        <typeAlias type="com.allbill127.psk_lab1.mybatis.entities.Company" alias="Company"/>
        <typeAlias type="com.allbill127.psk_lab1.mybatis.entities.Employee" alias="Employee"/>
        <typeAlias type="com.allbill127.psk_lab1.mybatis.entities.Person" alias="Person"/>
        <typeAlias type="com.allbill127.psk_lab1.mybatis.entities.Owner" alias="Owner"/>
    </typeAliases>
    <environments default="development">
        <environment id="development">
            <transactionManager type="MANAGED"/>
            <dataSource type="JNDI">
                <property name="data_source" value="CompaniesDS"/>
            </dataSource>
        </environment>
    </environments>
    <mappers>
        <mapper resource="mybatisMapperXMLs/CompanyMapper.xml"/>
        <mapper resource="mybatisMapperXMLs/EmployeeMapper.xml"/>
        <mapper resource="mybatisMapperXMLs/PersonMapper.xml"/>
        <mapper resource="mybatisMapperXMLs/OwnerMapper.xml"/>
    </mappers>
</configuration>
